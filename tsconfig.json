{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["./components/*"],
            "@pages/*": ["./pages/*"],
            "@hooks/*": ["./hooks/*"],
            "@utils/*": ["./utils/*"],
            "@slices/*": ["./slices/*"],
            "@firebase/*": ["./firebase/*"],
            "@commonAssets/*": ["./commonAssets/*"]
        }
    },
    "include": ["cypress", "src"]
}
